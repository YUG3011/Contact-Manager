generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id      String  @id @map("_id") @default(auto()) @db.ObjectId
  name    String
  email   String
  phone   String?
  city    String?
  company String?
  role    String?
  birthdate String?
  notes   String?
  favorite Boolean @default(false)
  updatedAt DateTime @updatedAt
  lastUsed DateTime?
  priority Int?
  expiresAt DateTime?
  createdAt DateTime @default(now())
  deletedAt DateTime?
}
